{{#each taps}}
  <div class="tap">
    <div class="hero" style="background-image: url('{{fields.imageLink}}')"></div>
    <div class="details">
      <div class="title-card">
        <h2>{{fields.beerName}}</h2>
        <h3>{{fields.breweryName}}</h3>
      </div>
      <h4 class="style">{{fields.style}}</h4>
      <div class="inner-content">
        <h5>{{fields.subtitle}}</h5>
        <p>{{fields.description}}</p>
      </div>
    </div>
  </div>
{{/each}}
